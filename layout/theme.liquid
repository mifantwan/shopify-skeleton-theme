<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}

    {{ "platter-apps.css" | asset_url | stylesheet_tag: preload: true }}
    <script src="{{ 'platter-apps.js' | asset_url }}" defer></script>  
  
  </head>

  <body class="font-custom-body text-sm font-semibold leading-body tracking-body text-custom-brown">>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
