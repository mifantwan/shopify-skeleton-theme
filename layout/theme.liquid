<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}

    <style>
      @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Source+Serif+4:ital,opsz,wght@0,8..60,200..900;1,8..60,200..900&display=swap');
      
      * {
          transition: all 0.5s ease-in-out;
      }

      .collection-lists {
          margin-right: calc(-50vw + 50%) !important;
          padding-right: 20px !important;
      }

      .collection-lists::-webkit-scrollbar {
          display: none;
      }

      .collection-lists {
          scrollbar-width: none;
          -ms-overflow-style: none;
      }

      .product-image-container img:first-child {
          opacity: 1;
          transition: opacity 0.5s ease-in-out;
      }

      .product-image-container img:last-child {
          opacity: 0;
          transition: opacity 0.5s ease-in-out;
      }

      .product-image-container:hover img:first-child {
          opacity: 0;
      }

      .product-image-container:hover img:last-child {
          opacity: 1;
      }
  </style>
  <script src="https://cdn.tailwindcss.com" defer></script>
  <script>
      tailwind.config = {
          theme: {
              extend: {
                  fontFamily: {
                      'custom-title': ['"Source Serif 4"', 'serif'],
                      'custom-subtitle': ['Bebas Neue', 'cursive'],
                      'custom-body': ['Poppins', 'sans-serif'],
                  },
                  // Custom Text Color
                  colors: {
                      'custom-brown': '#5C553A',
                      'custom-green': '#5C7962',
                      'custom-light-grey': '#707070',
                      'custom-light': '#DDD6D7',
                      'custom-dark': '#231F20'

                  },
                  maxWidth: {
                      'width-xl': '1366px',
                  },
              },
          },
      }
  </script>
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
